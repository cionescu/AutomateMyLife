<div class="auth">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: false %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :password, class: "col-form-label" %>
        <% if @minimum_password_length %>
          <p class="text-muted">
            (<%= @minimum_password_length %> characters minimum)
          </em>
        <% end %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "false", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "false", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
