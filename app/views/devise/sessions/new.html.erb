<div class="auth">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: user_session_path(resource)) do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: false %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "false", class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group row">
        <div class="col-sm-10">
          <div class="form-check">
            <%= f.label :remember_me, class: "form-check-label" do %>
              <%= f.check_box :remember_me, class: "form-check-input" %>
              Remember me
            <% end %>
          </div>
        </div>
      </div>
    <% end -%>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
